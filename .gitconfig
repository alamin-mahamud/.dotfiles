[user]
    name = Your Name
    email = your.email@example.com

[core]
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    pager = less -R

[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto

[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    df = diff
    lg = log --oneline --graph --decorate
    last = log -1 HEAD
    unstage = reset HEAD --
    amend = commit --amend
    tags = tag -l
    branches = branch -a
    remotes = remote -v
    contributors = shortlog --summary --numbered

[push]
    default = current
    followTags = true

[pull]
    rebase = true

[fetch]
    prune = true

[diff]
    tool = vimdiff

[merge]
    tool = vimdiff
    conflictstyle = diff3

[credential]
    helper = cache --timeout=3600

[init]
    defaultBranch = main